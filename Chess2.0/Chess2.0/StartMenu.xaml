<Window x:Class="Chess2._0.StartMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess2._0"
        mc:Ignorable="d"
        Title="Chess" Height="440" Width="400">
    <Grid Background="Brown">
        <Button x:Name="NewGame" Background="Beige" Content="New Game" HorizontalAlignment="Left" Margin="95,120,0,0" VerticalAlignment="Top" Width="190" Click="newGame_Click" Height="50"/>
        <Button x:Name="ContinueGame" Background="Beige" Content="Continue Game" HorizontalAlignment="Left" Margin="95,175,0,0" VerticalAlignment="Top" Width="190" Click="continueGame_Click" Height="50"/>
        <Button x:Name="Exit" Background="Beige" Content="Exit" Margin="95,230,0,130.667" VerticalAlignment="Center" Width="190" Click="exit_Click" HorizontalAlignment="Left" Height="50"/>
        <Label x:Name="label" Content="Chess" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="95,50,0,0" Width="190" FontSize="32" FontFamily="Goudy Stout" Height="50"/>

    </Grid>
</Window>
