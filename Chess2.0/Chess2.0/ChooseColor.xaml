<Window x:Class="Chess2._0.ChooseColor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess2._0"
        mc:Ignorable="d"
        Title="Chess" Height="440" Width="400">

    <Grid Background="Brown">
        <Button x:Name="white" Background="Beige" Content="White" HorizontalAlignment="Left" Margin="106,120,0,0" VerticalAlignment="Top" Width="180" Click="white_Click" Height="50"/>
        <Button x:Name="black" Background="Beige" Content="Black" HorizontalAlignment="Left" Margin="106,175,0,0" VerticalAlignment="Top" Width="180" Click="black_Click" Height="50"/>
        <Label x:Name="label" Content="Choose color" HorizontalAlignment="Left" Margin="23,60,0,0" VerticalAlignment="Top" FontFamily="Goudy Stout" FontSize="24" Width="349"/>

    </Grid>
</Window>
